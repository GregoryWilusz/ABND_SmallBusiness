<resources>

    <!-- Base application theme. -->
    <style name="appTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="relativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="imageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/mod_inside</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="LinearLayoutGeneralSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/textBoxColor</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="LinearLayoutContactSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:background">@color/textBoxColor</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/businessNameFontSize</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/labelFontSize</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/contentFontSize</item>
        <item name="android:textColor">@color/fontColor</item>
    </style>

    <style name="phone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/contentFontSize</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:autoLink">phone</item>
    </style>

    <style name="www">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/contentFontSize</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:autoLink">web</item>
    </style>

</resources>
